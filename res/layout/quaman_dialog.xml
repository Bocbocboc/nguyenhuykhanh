<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/nen_trong"
    android:gravity="center">
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/quaman_bg"
        android:gravity="center|bottom">
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            
            <ImageView android:id="@+id/img_sao1" 
	    	    android:layout_width="30dp"
	    	    android:layout_height="30dp"
	    	    android:src="@drawable/star"/>
            
            <ImageView android:id="@+id/img_sao2" 
	    	    android:layout_width="30dp"
	    	    android:layout_height="30dp"
	    	    android:layout_marginTop="5dp"
	    	    android:layout_marginLeft="10dp"
	    	    android:src="@drawable/star"/>
            
            <ImageView android:id="@+id/img_sao3" 
	    	    android:layout_width="30dp"
	    	    android:layout_height="30dp"
	    	    android:layout_marginLeft="10dp"
	    	    android:src="@drawable/star"/>
            
        </LinearLayout>

        <TextView
            android:id="@+id/tv_your_score_quaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="#7c00b5"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="19dp" />
        
	        <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginTop="5dp"
	            android:gravity="center_vertical">
		    
		    	<ImageView android:id="@+id/bt_menu_quaman" 
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/menu"/>
			   
		    	<ImageView android:id="@+id/bt_replay_map" 
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_marginLeft="32dp"
		    	    android:src="@drawable/replay"/>
		    	
		    	<ImageView android:id="@+id/bt_next_map" 
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_marginLeft="32dp"
		    	    android:src="@drawable/btnnext"/>
	    	
    	</LinearLayout>
	    
	  </LinearLayout>

</LinearLayout>
