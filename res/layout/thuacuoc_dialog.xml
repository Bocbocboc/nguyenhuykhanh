<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/nen_trong"
    android:gravity="center">
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gameover_bg"
        android:gravity="center|bottom">
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginBottom="35dp"            
            android:orientation="horizontal">
            
            <ImageView android:id="@+id/img_sao1" 
	    	    android:layout_width="30dp"
	    	    android:layout_height="30dp"
	    	    android:src="@drawable/star1"/>
            
            <ImageView android:id="@+id/img_sao2" 
	    	    android:layout_width="30dp"
	    	    android:layout_height="30dp"
	    	    android:layout_marginTop="5dp"
	    	    android:layout_marginLeft="10dp"
	    	    android:src="@drawable/star1"/>
            
            <ImageView android:id="@+id/img_sao3" 
	    	    android:layout_width="30dp"
	    	    android:layout_height="30dp"
	    	    android:layout_marginLeft="10dp"
	    	    android:src="@drawable/star1"/>
            
        </LinearLayout>
        
        	<TextView android:id="@+id/tv_your_score" 
        	    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:layout_marginBottom="7dp"
            android:textStyle="bold"
            android:textColor="#7c00b5"
            android:textSize="19dp" />
        
	        <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginRight="30dp"
	            android:layout_marginBottom="4dp"
	            android:gravity="center_vertical">
	    
	    	<ImageView android:id="@+id/bt_menu_thuacuoc" 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="60dp"
	    	    android:src="@drawable/menu"/>
		   
	    	<ImageView android:id="@+id/bt_replay_thuacuoc" 
	    	   android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="35dp"
	    	    android:src="@drawable/replay"/>
	    	
    	</LinearLayout>
	    
	  </LinearLayout>

</LinearLayout>
